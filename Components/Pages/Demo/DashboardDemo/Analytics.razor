@page "/analytics"
@rendermode InteractiveServer
@inherits AnalyticsBase

<PageTitle>Analytics</PageTitle>

@if (Auth.CurrentUser == null)
{
    Nav.NavigateTo("/signin");
}
else
{
    <div class="py-8 bg-gray-50">
        <div class="max-w-7xl mx-auto px-4 space-y-6">
            <!-- Header -->
            <div class="text-center mb-8">
                <h1 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-2">Analytics Dashboard</h1>
                <p class="text-base text-gray-600">Insights and metrics for your account</p>
            </div>

            <!-- Basic Stats (Always visible) -->
            <div class="bg-white rounded-2xl border-2 border-gray-200 p-6 sm:p-8">
                <h2 class="text-xl font-bold text-gray-900 mb-4">Basic Metrics</h2>
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
                    <div
                        class="bg-white rounded-2xl border-2 border-gray-200 p-5 text-center hover:border-blue-400 hover:shadow-lg transition-all duration-200">
                        <p class="text-xs font-medium text-gray-500 uppercase mb-2">Page Views</p>
                        <p class="text-xl font-bold text-blue-600">1,234</p>
                        <p class="text-xs text-gray-600 mt-1">↑ 12% this week</p>
                    </div>
                    <div
                        class="bg-white rounded-2xl border-2 border-gray-200 p-5 text-center hover:border-blue-400 hover:shadow-lg transition-all duration-200">
                        <p class="text-xs font-medium text-gray-500 uppercase mb-2">Sessions</p>
                        <p class="text-xl font-bold text-emerald-600">456</p>
                        <p class="text-xs text-gray-600 mt-1">↑ 8% this week</p>
                    </div>
                    <div
                        class="bg-white rounded-2xl border-2 border-gray-200 p-5 text-center hover:border-blue-400 hover:shadow-lg transition-all duration-200">
                        <p class="text-xs font-medium text-gray-500 uppercase mb-2">Bounce Rate</p>
                        <p class="text-xl font-bold text-purple-600">42%</p>
                        <p class="text-xs text-gray-600 mt-1">↓ 3% this week</p>
                    </div>
                    <div
                        class="bg-white rounded-2xl border-2 border-gray-200 p-5 text-center hover:border-blue-400 hover:shadow-lg transition-all duration-200">
                        <p class="text-xs font-medium text-gray-500 uppercase mb-2">Avg Session</p>
                        <p class="text-xl font-bold text-orange-600">3:24</p>
                        <p class="text-xs text-gray-600 mt-1">↑ 15s this week</p>
                    </div>
                </div>
            </div>

            <!-- Advanced Analytics (Paid+ only) -->
            @if (IsPaidOrAdmin)
            {
                <div class="bg-white rounded-2xl border-2 border-gray-200 p-6 sm:p-8">
                    <div class="flex items-center justify-between mb-4">
                        <h2 class="text-xl font-bold text-gray-900">Advanced Analytics</h2>
                        <span class="px-2 py-1 text-xs font-medium bg-purple-100 text-purple-800 rounded">Paid Feature</span>
                    </div>
                    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
                        <div
                            class="border-2 border-gray-200 rounded-xl p-4 hover:border-blue-400 hover:shadow-lg transition-all duration-200">
                            <p class="text-sm font-medium text-gray-700">Conversion Rate</p>
                            <p class="text-2xl font-bold text-gray-900 mt-2">4.8%</p>
                            <div class="mt-3 h-2 bg-gray-200 rounded-full overflow-hidden">
                                <div class="h-full bg-emerald-500" style="width: 48%"></div>
                            </div>
                        </div>
                        <div
                            class="border-2 border-gray-200 rounded-xl p-4 hover:border-blue-400 hover:shadow-lg transition-all duration-200">
                            <p class="text-sm font-medium text-gray-700">Revenue per User</p>
                            <p class="text-2xl font-bold text-gray-900 mt-2">$24.50</p>
                            <p class="text-xs text-emerald-600 mt-1">↑ $2.30 vs last month</p>
                        </div>
                        <div
                            class="border-2 border-gray-200 rounded-xl p-4 hover:border-blue-400 hover:shadow-lg transition-all duration-200">
                            <p class="text-sm font-medium text-gray-700">Customer Lifetime Value</p>
                            <p class="text-2xl font-bold text-gray-900 mt-2">$892</p>
                            <p class="text-xs text-blue-600 mt-1">↑ 18% growth</p>
                        </div>
                    </div>
                </div>

                <!-- Traffic Sources -->
                <div class="bg-white rounded-2xl border-2 border-gray-200 p-6 sm:p-8">
                    <h2 class="text-xl font-bold text-gray-900 mb-4">Traffic Sources</h2>

                    <!-- Desktop: Rows with dividers -->
                    <div class="hidden sm:block space-y-0 divide-y divide-gray-200">
                        @foreach (var source in trafficSources)
                        {
                            <div class="flex items-center justify-between py-4 first:pt-0 last:pb-0">
                                <div class="flex items-center gap-3">
                                    <span class="text-2xl">@source.Icon</span>
                                    <div>
                                        <p class="text-sm font-medium text-gray-900">@source.Name</p>
                                        <p class="text-xs text-gray-500">@source.Visitors visitors</p>
                                    </div>
                                </div>
                                <div class="text-right">
                                    <p class="text-sm font-semibold text-gray-900">@source.Percentage%</p>
                                    <div class="w-24 h-2 bg-gray-200 rounded-full overflow-hidden mt-1">
                                        <div class="h-full bg-blue-500" style="width: @(source.Percentage)%"></div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    <!-- Mobile: Cards -->
                    <div class="grid grid-cols-1 gap-3 sm:hidden">
                        @foreach (var source in trafficSources)
                        {
                            <div
                                class="border-2 border-gray-200 rounded-xl p-4 hover:border-gray-300 hover:shadow-lg transition-all duration-200">
                                <div class="flex items-center gap-3 mb-3">
                                    <span class="text-2xl">@source.Icon</span>
                                    <div class="flex-1">
                                        <p class="text-sm font-medium text-gray-900">@source.Name</p>
                                        <p class="text-xs text-gray-500">@source.Visitors visitors</p>
                                    </div>
                                    <p class="text-sm font-semibold text-gray-900">@source.Percentage%</p>
                                </div>
                                <div class="w-full h-2 bg-gray-200 rounded-full overflow-hidden">
                                    <div class="h-full bg-blue-500" style="width: @(source.Percentage)%"></div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
            else
            {
                <!-- Locked State for Free Users -->
                <div class="bg-gradient-to-br from-purple-50 to-indigo-50 rounded-2xl border-2 border-purple-200 p-8">
                    <div class="text-center max-w-md mx-auto">
                        <div class="h-16 w-16 bg-purple-600 rounded-full flex items-center justify-center mx-auto mb-4">
                            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                            </svg>
                        </div>
                        <h3 class="text-2xl font-bold text-gray-900 mb-2">Unlock Advanced Analytics</h3>
                        <p class="text-gray-600 mb-6">
                            Upgrade to a Paid account to access conversion tracking, revenue metrics, traffic sources, and more.
                        </p>
                        <div class="flex flex-wrap justify-center gap-3">
                            <a href="/profile"
                                class="px-6 py-3 bg-purple-600 hover:bg-purple-700 text-white font-semibold rounded-lg transition-colors">
                                Upgrade Now
                            </a>
                            <button
                                class="px-6 py-3 bg-white hover:bg-gray-50 text-gray-700 font-medium border border-gray-300 rounded-lg transition-colors">
                                Learn More
                            </button>
                        </div>
                        <div class="mt-8 grid grid-cols-2 gap-4 text-left">
                            <div class="flex items-start gap-2">
                                <svg class="w-5 h-5 text-purple-600 flex-shrink-0 mt-0.5" fill="currentColor"
                                    viewBox="0 0 20 20">
                                    <path fill-rule="evenodd"
                                        d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" />
                                </svg>
                                <div>
                                    <p class="text-sm font-medium text-gray-900">Revenue Tracking</p>
                                    <p class="text-xs text-gray-600">Monitor earnings</p>
                                </div>
                            </div>
                            <div class="flex items-start gap-2">
                                <svg class="w-5 h-5 text-purple-600 flex-shrink-0 mt-0.5" fill="currentColor"
                                    viewBox="0 0 20 20">
                                    <path fill-rule="evenodd"
                                        d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" />
                                </svg>
                                <div>
                                    <p class="text-sm font-medium text-gray-900">Traffic Sources</p>
                                    <p class="text-xs text-gray-600">See where users come from</p>
                                </div>
                            </div>
                            <div class="flex items-start gap-2">
                                <svg class="w-5 h-5 text-purple-600 flex-shrink-0 mt-0.5" fill="currentColor"
                                    viewBox="0 0 20 20">
                                    <path fill-rule="evenodd"
                                        d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" />
                                </svg>
                                <div>
                                    <p class="text-sm font-medium text-gray-900">Custom Reports</p>
                                    <p class="text-xs text-gray-600">Build your own views</p>
                                </div>
                            </div>
                            <div class="flex items-start gap-2">
                                <svg class="w-5 h-5 text-purple-600 flex-shrink-0 mt-0.5" fill="currentColor"
                                    viewBox="0 0 20 20">
                                    <path fill-rule="evenodd"
                                        d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" />
                                </svg>
                                <div>
                                    <p class="text-sm font-medium text-gray-900">Priority Support</p>
                                    <p class="text-xs text-gray-600">Get help faster</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }

            <!-- Admin-Only Section -->
            @if (IsAdmin)
            {
                <div class="bg-gradient-to-br from-red-50 to-orange-50 rounded-2xl border-2 border-red-200 p-6 sm:p-8">
                    <div class="flex items-center gap-2 mb-4">
                        <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                        </svg>
                        <h2 class="text-xl font-bold text-red-900">Admin Analytics</h2>
                        <span class="px-2 py-1 text-xs font-medium bg-red-100 text-red-800 rounded">Admin Only</span>
                    </div>
                    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
                        <div class="bg-white rounded-lg p-4 border-2 border-red-200">
                            <p class="text-xs font-medium text-red-600 uppercase">Total Users</p>
                            <p class="text-2xl font-bold text-gray-900 mt-1">@Auth.AllUsers.Count</p>
                        </div>
                        <div class="bg-white rounded-lg p-4 border-2 border-red-200">
                            <p class="text-xs font-medium text-red-600 uppercase">Free Accounts</p>
                            <p class="text-2xl font-bold text-gray-900 mt-1">@Auth.AllUsers.Count(u => u.Role == "Free")</p>
                        </div>
                        <div class="bg-white rounded-lg p-4 border-2 border-red-200">
                            <p class="text-xs font-medium text-red-600 uppercase">Paid Accounts</p>
                            <p class="text-2xl font-bold text-gray-900 mt-1">@Auth.AllUsers.Count(u => u.Role == "Paid")</p>
                        </div>
                        <div class="bg-white rounded-lg p-4 border-2 border-red-200">
                            <p class="text-xs font-medium text-red-600 uppercase">Admins</p>
                            <p class="text-2xl font-bold text-gray-900 mt-1">@Auth.AllUsers.Count(u => u.Role == "Admin")</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}