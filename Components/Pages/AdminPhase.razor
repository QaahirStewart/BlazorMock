@page "/admin-guide/phase/{Id}"
@inject ILearningProgressService ProgressService
@inject ILearningGuideService GuideService
@rendermode InteractiveServer

<PageTitle>Admin Phase</PageTitle>

@if (phase is null || stepsInPhase is null)
{
    <div class="min-h-screen flex items-center justify-center">
        <p class="text-gray-600 text-sm sm:text-base">Loading phase&hellip;</p>
    </div>
}
else
{
    <div class="min-h-screen py-8">
        <div class="w-full mx-auto px-4 max-w-5xl">
            <a href="/admin-guide" class="inline-flex items-center gap-2 text-blue-600 hover:text-blue-700 mb-4 text-sm sm:text-base">
                <span>←</span> Back to Admin phases
            </a>

            <!-- Phase header uses per-phase gradient coordinated with card palette -->
            <div class="rounded-2xl p-5 sm:p-6 mb-8 @BlazorMock.Components.Pages.AdminGuide.PhaseGradient(phase!.Id)">
                <div class="mb-3">
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-purple-50 text-purple-700 border border-purple-200">
                        Admin Panel
                    </span>
                </div>
                <h1 class="text-2xl sm:text-3xl md:text-4xl font-bold text-gray-900 mb-2 break-words">@phase.Title</h1>
                <p class="text-sm sm:text-base text-gray-700 mb-1 break-words">@phase.Subtitle</p>
                <p class="text-sm sm:text-base text-gray-700 mb-3 break-words">@phase.Description</p>
                <p class="text-sm sm:text-base text-gray-800 font-semibold">
                    Progress: @stepsInPhase.Count(s => s.IsComplete)/@stepsInPhase.Count
                </p>
            </div>

            <!-- Steps list styled closer to trucking phase cards -->
            <div class="grid sm:grid-cols-2 gap-4">
                @foreach (var step in stepsInPhase)
                {
                    bool done = step.IsComplete;
                    <div class="bg-white rounded-2xl border border-gray-200 p-4 flex flex-col gap-3">
                        <div class="flex items-start justify-between gap-3">
                            <div class="flex items-center gap-3 min-w-0">
                                <div class="inline-flex h-8 w-8 items-center justify-center rounded-full @(done ? "bg-green-100 text-green-700" : "bg-gray-100 text-gray-600") text-sm font-semibold">
                                    @(done ? "✓" : step.StepNumber.ToString())
                                </div>
                                <div class="min-w-0">
                                    <p class="text-sm sm:text-base font-medium text-gray-900 break-words">
                                        @step.Title
                                    </p>
                                    @if (step.CompletedDate is not null)
                                    {
                                        <p class="text-xs text-gray-500 break-words">Completed @step.CompletedDate.Value.ToLocalTime().ToString("g")</p>
                                    }
                                </div>
                            </div>
                            <div class="text-gray-300 self-start">→</div>
                        </div>
                        <div class="flex items-center justify-between gap-3">
                            <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium @(done ? "bg-green-50 text-green-700 border border-green-200" : "bg-gray-50 text-gray-700 border border-gray-200")">
                                @(done ? "Done" : "Not started")
                            </span>
                            <button class="px-2 py-1 text-xs sm:text-sm rounded-lg border border-gray-300 hover:bg-gray-50" @onclick="() => ToggleStep(step.StepNumber)">
                                @(done ? "Mark incomplete" : "Mark complete")
                            </button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public string? Id { get; set; }

    private Phase? phase;
    private List<StepProgress>? allSteps;
    private List<StepProgress>? stepsInPhase;

    protected override async Task OnInitializedAsync()
    {
        if (string.IsNullOrWhiteSpace(Id))
        {
            return;
        }

        phase = GuideService.GetPhaseById("admin", Id);
        allSteps = await ProgressService.GetAllStepsAsync("admin");

        if (phase is not null && allSteps is not null)
        {
            stepsInPhase = allSteps
            .Where(s => phase.StepNumbers.Contains(s.StepNumber))
            .OrderBy(s => s.StepNumber)
            .ToList();
        }
    }

    private async Task ToggleStep(int stepNumber)
    {
        if (allSteps is null)
        {
            return;
        }

        var step = allSteps.FirstOrDefault(s => s.StepNumber == stepNumber);
        if (step is null)
        {
            return;
        }

        if (step.IsComplete)
        {
            await ProgressService.MarkStepIncompleteAsync("admin", stepNumber);
        }
        else
        {
            await ProgressService.MarkStepCompleteAsync("admin", stepNumber);
        }

        allSteps = await ProgressService.GetAllStepsAsync("admin");

        if (phase is not null && allSteps is not null)
        {
            stepsInPhase = allSteps
            .Where(s => phase.StepNumbers.Contains(s.StepNumber))
            .OrderBy(s => s.StepNumber)
            .ToList();
        }
    }
}