                        <span class="ml-3 text-gray-600">Loading Pokemon...</span>
                    </div>
                }
                else if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="bg-red-50 border-2 border-red-200 rounded-xl p-6">
                        <p class="text-red-700">@errorMessage</p>
                    </div>
                }
                else
                {
                    <!-- Pokemon grid -->
                    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-4">
                        @foreach (var pokemon in CurrentPagePokemon)
                        {
                            int id = GetPokemonId(pokemon.Url);
                            
                            <div @onclick="@(async () => await ShowDetails(id))"
                                 class="border-2 border-gray-200 rounded-xl overflow-hidden 
                                        hover:border-blue-400 hover:shadow-xl 
                                        transition-all duration-200 cursor-pointer">
                                
                                <div class="aspect-square bg-gradient-to-br from-gray-50 to-gray-100">
                                    <img src="@GetSpriteUrl(id)" 
                                         class="w-full h-full object-contain p-2
                                                hover:scale-110 transition-transform duration-300" 
                                         alt="@pokemon.Name" 
                                         loading="lazy" />
                                </div>
                                
                                <div class="p-3 bg-white">
                                    <span class="text-xs text-gray-500 font-mono">
                                        #@id.ToString("D3")
                                    </span>
                                    <p class="font-semibold text-gray-800 capitalize 
                                              hover:text-blue-600 transition-colors">
                                        @pokemon.Name
                                    </p>
                                </div>
                            </div>
                        }
                    </div>

                    <!-- Pagination -->
                    <div class="flex items-center justify-between mt-6">
                        <button @onclick="PreviousPage" 
                                disabled="@(currentPage == 1)"
                                class="px-4 py-2 bg-blue-600 text-white rounded-lg
                                       hover:bg-blue-700 transition-colors
                                       disabled:opacity-50 disabled:cursor-not-allowed">
                            ‚Üê Previous
                        </button>
                        
                        <span class="text-sm text-gray-600">
                            Page @currentPage of @totalPages
                        </span>
                        
                        <button @onclick="NextPage" 
                                disabled="@(currentPage >= totalPages)"
                                class="px-4 py-2 bg-blue-600 text-white rounded-lg
                                       hover:bg-blue-700 transition-colors
                                       disabled:opacity-50 disabled:cursor-not-allowed">
                            Next ‚Üí
                        </button>
                    </div>
                }
            </div>

            <p class="text-xs text-gray-600 mt-4 text-center">üí° Try searching for "char" or "pika" and click Pokemon to see details!</p>
        </div>

        <!-- Modal for Pokemon details -->
        @if (selectedPokemon != null)
        {
            <div @onclick="CloseModal" 
                 class="fixed inset-0 bg-black/50 flex items-center justify-center z-50 p-4">
                
                <div @onclick:stopPropagation 
                     class="bg-white rounded-2xl shadow-2xl p-6 max-w-md w-full">
                    
                    <!-- Close button -->
                    <div class="flex items-center justify-between mb-4">
                        <h2 class="text-2xl font-bold capitalize">@selectedPokemon.Name</h2>
                        <button @onclick="CloseModal" 
                                class="text-gray-500 hover:text-gray-700 text-2xl">
                            ‚úï
                        </button>
                    </div>
                    
                    <!-- Pokemon sprite -->
                    <img src="@GetSpriteUrl(selectedPokemon.Id)" 
                         class="w-48 h-48 mx-auto" 
                         alt="@selectedPokemon.Name" />
                    
                    <!-- Stats -->
                    <div class="mt-4 space-y-2">
                        <p class="text-sm">
                            <strong>Height:</strong> @(selectedPokemon.Height / 10.0)m
                        </p>
                        <p class="text-sm">
                            <strong>Weight:</strong> @(selectedPokemon.Weight / 10.0)kg
                        </p>
                        <p class="text-sm">
                            <strong>Base Experience:</strong> @selectedPokemon.Base_Experience
                        </p>
                    </div>
                    
                    <!-- Types -->
                    <div class="mt-4">
                        <p class="text-sm font-semibold mb-2">Types:</p>
                        <div class="flex gap-2">
                            @foreach (var type in selectedPokemon.Types)
                            {
                                <span class="px-3 py-1 bg-blue-100 text-blue-700 
                                             rounded-full text-sm capitalize">
                                    @type.Type.Name
                                </span>
                            }
                        </div>
                    </div>
                    
                    <!-- Abilities -->
                    <div class="mt-4">
                        <p class="text-sm font-semibold mb-2">Abilities:</p>
                        <div class="flex flex-wrap gap-2">
                            @foreach (var ability in selectedPokemon.Abilities)
                            {
                                <span class="px-3 py-1 bg-green-100 text-green-700 
                                             rounded-full text-sm capitalize">
                                    @ability.Ability.Name
                                </span>
                            }
                        </div>
                    </div>
                    
                    <!-- Close button -->
                    <button @onclick="CloseModal" 
                            class="w-full mt-6 px-4 py-2 bg-blue-600 hover:bg-blue-700 
                                   text-white rounded-lg transition-colors">
                        Close
                    </button>
                </div>
            </div>
        }

        <!-- Mark Complete (Green Card) -->
        <div class="bg-white rounded-xl p-6 border-2 border-green-200 mb-6">
            <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
                <div>
                    <h3 class="text-lg font-semibold text-gray-900 mb-1">Finished Step 6?</h3>
                    <p class="text-sm text-gray-600">Congratulations! Your Pokemon explorer is complete! üéâ</p>
                </div>
                @if (isComplete)
                {
                    <div class="flex items-center gap-3">
                        <span class="px-4 py-2 rounded-full bg-green-100 text-green-700 font-medium">‚úì Completed</span>
                        <button @onclick="ResetStep"
                            class="px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors text-sm">Reset</button>
                    </div>
                }
                else
                {
                    <button @onclick="MarkComplete"
                        class="px-6 py-3 bg-green-600 hover:bg-green-700 text-white rounded-lg font-medium transition-colors">Mark as Complete</button>
                }
            </div>
        </div>

        <!-- Congratulations Banner -->
        <div class="bg-gradient-to-r from-yellow-200 to-emerald-200 rounded-2xl p-6 mb-6">
            <h3 class="text-xl font-bold text-gray-900 mb-2">üéä Congratulations!</h3>
            <p class="text-gray-700 mb-3">
                You've built a complete Pokemon explorer with search, filtering, pagination, and detailed views! This combines all the concepts from Steps 1-6 into a polished, professional application.
            </p>
        </div>

        <!-- Navigation -->
        <div class="mt-8">
            <div class="bg-black/90 rounded-2xl p-6 sm:p-8 text-white text-center">
                <p class="text-lg sm:text-xl font-semibold mb-4">Congratulations!</p>
                <p class="text-sm text-gray-300 mb-6 max-w-2xl mx-auto">
                    You've completed the Pokemon Collector tutorial! Check out the full demo or explore more guides.
                </p>
                <div class="flex flex-col sm:flex-row items-center justify-center gap-3">
                    <a href="/pokemon-guide"
                        class="inline-flex items-center gap-2 px-6 py-3 bg-white/10 hover:bg-white/20 rounded-xl transition-colors">
                        <span class="text-lg">‚Üê</span>
                        <span class="text-sm sm:text-base font-semibold">Back to Guide</span>
                    </a>
                    <a href="/pokemon-examples/step5"
                        class="inline-flex items-center gap-2 px-6 py-3 bg-white/10 hover:bg-white/20 rounded-xl transition-colors">
                        <span class="text-lg">‚Üê</span>
                        <span class="text-sm sm:text-base font-semibold">Previous: Step 5</span>
                    </a>
                    <a href="/demo/pokemon-collector"
                        class="inline-flex items-center gap-2 px-6 py-3 bg-blue-600 hover:bg-blue-700 rounded-xl transition-colors">
                        <span class="text-sm sm:text-base font-semibold">View Full Demo</span>
                        <span class="text-lg">‚Üí</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
