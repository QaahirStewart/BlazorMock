                <pre data-code-title="Components/Pages/Auth/Signin.razor"
                    class="code-block text-xs sm:text-sm font-mono text-gray-800 w-full max-w-full overflow-x-auto">@@page "/signin"
@@using BlazorMock.Data
@@using BlazorMock.Models
@@inject AppDbContext Db
@@inject BlazorMock.Services.AppState AppState

&lt;h3 class="text-2xl font-bold mb-4"&gt;Sign in&lt;/h3&gt;

@@if (!string.IsNullOrEmpty(SuccessMessage))
{
    &lt;div class="mb-4 px-4 py-2 rounded-lg bg-green-100 text-green-800 text-sm"&gt;@@SuccessMessage&lt;/div&gt;
}
@@if (!string.IsNullOrEmpty(ErrorMessage))
{
    &lt;div class="mb-4 px-4 py-2 rounded-lg bg-red-100 text-red-800 text-sm"&gt;@@ErrorMessage&lt;/div&gt;
}

&lt;EditForm Model="signinModel" OnValidSubmit="HandleValidSubmit"&gt;
    &lt;DataAnnotationsValidator /&gt;
    &lt;ValidationSummary /&gt;

    &lt;div class="space-y-4"&gt;
        &lt;div&gt;
            &lt;label class="block text-sm font-medium text-gray-700"&gt;Email&lt;/label&gt;
            &lt;InputText @@bind-Value="signinModel.Email" class="mt-1 block w-full rounded-lg border-gray-300" /&gt;
            &lt;ValidationMessage For="() =&gt; signinModel.Email" /&gt;
        &lt;/div&gt;

        &lt;div&gt;
            &lt;label class="block text-sm font-medium text-gray-700"&gt;Password&lt;/label&gt;
            &lt;InputText @@bind-Value="signinModel.Password" type="password" class="mt-1 block w-full rounded-lg border-gray-300" /&gt;
            &lt;ValidationMessage For="() =&gt; signinModel.Password" /&gt;
        &lt;/div&gt;

        &lt;button type="submit" class="mt-2 inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-lg text-sm font-medium hover:bg-blue-700"&gt;
            Sign in
        &lt;/button&gt;
    &lt;/div&gt;
&lt;/EditForm&gt;

@@code {
    private SigninModel signinModel = new();

    public string? SuccessMessage { get; set; }
    public string? ErrorMessage { get; set; }

    private async Task HandleValidSubmit()
    {
        // Clear old messages before each attempt
        ErrorMessage = null;
        SuccessMessage = null;

        // Look up the user by email using EF Core
        var user = await Db.Users.FirstOrDefaultAsync(u =&gt; u.Email == signinModel.Email);
        if (user is null || user.PasswordHash != signinModel.Password)
        {
            // Match the UX of the main /signin page: friendly, non-specific error
            ErrorMessage = "Invalid email or password. Please try again.";
            return;
        }

        // Mark the user as signed in so the rest of the app can react
        AppState.CurrentUser = user;
        SuccessMessage = $"Welcome back, {user.DisplayName}!";
    }

    public class SigninModel
    {
        [Required, EmailAddress]
        public string Email { get; set; } = string.Empty;

        [Required]
        public string Password { get; set; } = string.Empty;
    }
}</pre>
