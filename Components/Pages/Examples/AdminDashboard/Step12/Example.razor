                    <pre data-code-title="@@code block"
                        class="code-block text-xs sm:text-sm font-mono text-gray-800 w-full max-w-full overflow-x-auto">@@code {
    private bool isMobileMenuOpen;

    protected override void OnInitialized()
    {
        Auth.OnChange += OnAuthStateChanged;
    }

    public void Dispose()
    {
        Auth.OnChange -= OnAuthStateChanged;
    }

    private void ToggleMobileMenu() =&gt; isMobileMenuOpen = !isMobileMenuOpen;

    private void CloseMobileMenu() =&gt; isMobileMenuOpen = false;

    private void HandleSignOut()
    {
        Auth.SignOut();
        isProfileMenuOpen = false;
        isMobileMenuOpen = false;
        Navigation.NavigateTo("/", forceLoad: true);
    }

    private void OnAuthStateChanged()
    {
        _ = InvokeAsync(StateHasChanged);
    }
}</pre>
