using Microsoft.JSInterop;
using AdminDashboard.Services;

namespace AdminDashboard.Components.Pages;

public partial class AnalyticsBase : ComponentBase
{
    [Inject] protected IUserAuthService Auth { get; set; } = default!;
    [Inject] protected NavigationManager Nav { get; set; } = default!;
    [Inject] protected IJSRuntime JS { get; set; } = default!;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender || Auth.CurrentUser != null)
        {
            return;
        }

        var storedEmail = await JS.InvokeAsync&lt;string&gt;("localStorage.getItem", "currentUserEmail");
        if (!string.IsNullOrEmpty(storedEmail) && Auth.SignInByEmail(storedEmail))
        {
            StateHasChanged();
            return;
        }

        Nav.NavigateTo("/signin");
    }
}
