                <div class="bg-gray-100 border border-gray-200 rounded-lg p-4 overflow-x-auto">
                    <div class="text-xs text-gray-500 mb-1">Code-behind hooks</div>
                    <p class="text-xs text-gray-600 mb-2">The layout listens to <code>Auth.OnChange</code> so the nav
                        refreshes as soon as you sign in/out, and it marshals the callback with
                        <code>InvokeAsync</code> to stay circuit-safe.</p>
                    <pre data-code-title="MainLayout.razor ‚Äî @@code block"
                        class="code-block text-xs sm:text-sm font-mono text-gray-800 w-full max-w-full overflow-x-auto">@@code {
    protected override void OnInitialized()
    {
        Auth.OnChange += OnAuthStateChanged;
    }

    public void Dispose()
    {
        Auth.OnChange -= OnAuthStateChanged;
    }

    private void HandleSignOut()
    {
        Auth.SignOut();
        isProfileMenuOpen = false;
        isMobileMenuOpen = false;
        Navigation.NavigateTo(&quot;/&quot;, forceLoad: true);
    }

    private void OnAuthStateChanged()
    {
        _ = InvokeAsync(StateHasChanged);
    }
}</pre>
