                <pre data-code-title="Components/Pages/Auth/Signup.razor"
                    class="code-block text-xs sm:text-sm font-mono text-gray-800 w-full max-w-full overflow-x-auto">@@page "/signup"
@@using BlazorMock.Data
@@using BlazorMock.Models
@@inject AppDbContext Db

&lt;h3 class="text-2xl font-bold mb-4"&gt;Sign up&lt;/h3&gt;

@@if (!string.IsNullOrEmpty(SuccessMessage))
{
    &lt;div class="mb-4 px-4 py-2 rounded-lg bg-green-100 text-green-800 text-sm"&gt;@@SuccessMessage&lt;/div&gt;
}
@@if (!string.IsNullOrEmpty(ErrorMessage))
{
    &lt;div class="mb-4 px-4 py-2 rounded-lg bg-red-100 text-red-800 text-sm"&gt;@@ErrorMessage&lt;/div&gt;
}

&lt;EditForm Model="signupModel" OnValidSubmit="HandleValidSubmit"&gt;
    &lt;DataAnnotationsValidator /&gt;
    &lt;ValidationSummary /&gt;

    &lt;div class="space-y-4"&gt;
        &lt;div&gt;
            &lt;label class="block text-sm font-medium text-gray-700"&gt;Email&lt;/label&gt;
            &lt;InputText @@bind-Value="signupModel.Email" class="mt-1 block w-full rounded-lg border-gray-300" /&gt;
            &lt;ValidationMessage For="() =&gt; signupModel.Email" /&gt;
        &lt;/div&gt;

        &lt;div&gt;
            &lt;label class="block text-sm font-medium text-gray-700"&gt;Password&lt;/label&gt;
            &lt;InputText @@bind-Value="signupModel.Password" type="password" class="mt-1 block w-full rounded-lg border-gray-300" /&gt;
            &lt;ValidationMessage For="() =&gt; signupModel.Password" /&gt;
        &lt;/div&gt;

        &lt;div&gt;
            &lt;label class="block text-sm font-medium text-gray-700"&gt;Display name&lt;/label&gt;
            &lt;InputText @@bind-Value="signupModel.DisplayName" class="mt-1 block w-full rounded-lg border-gray-300" /&gt;
            &lt;ValidationMessage For="() =&gt; signupModel.DisplayName" /&gt;
        &lt;/div&gt;

        &lt;div&gt;
            &lt;label class="block text-sm font-medium text-gray-700"&gt;Role&lt;/label&gt;
            &lt;InputSelect @@bind-Value="signupModel.Role" class="mt-1 block w-full rounded-lg border-gray-300"&gt;
                &lt;option value=""&gt;Select a role...&lt;/option&gt;
                &lt;option value="Admin"&gt;Admin&lt;/option&gt;
                &lt;option value="Viewer"&gt;Viewer&lt;/option&gt;
            &lt;/InputSelect&gt;
            &lt;ValidationMessage For="() =&gt; signupModel.Role" /&gt;
        &lt;/div&gt;

        &lt;button type="submit" class="mt-2 inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-lg text-sm font-medium hover:bg-blue-700"&gt;
            Create account
        &lt;/button&gt;
    &lt;/div&gt;
&lt;/EditForm&gt;

@@code {
    private SignupModel signupModel = new();

    public string? SuccessMessage { get; set; }
    public string? ErrorMessage { get; set; }

    private async Task HandleValidSubmit()
    {
        try
        {
            var existing = await Db.Users.FirstOrDefaultAsync(u =&gt; u.Email == signupModel.Email);
            if (existing != null)
            {
                ErrorMessage = "A user with that email already exists.";
                SuccessMessage = null;
                return;
            }

            var user = new User
            {
                Email = signupModel.Email,
                PasswordHash = signupModel.Password,
                DisplayName = signupModel.DisplayName,
                Role = string.IsNullOrWhiteSpace(signupModel.Role) ? "Viewer" : signupModel.Role
            };

            Db.Users.Add(user);
            await Db.SaveChangesAsync();

            SuccessMessage = "Account created! You can now sign in.";
            ErrorMessage = null;
            signupModel = new();
        }
        catch (Exception ex)
        {
            ErrorMessage = $"Something went wrong while creating the account: {ex.Message}";
            SuccessMessage = null;
        }
    }

    public class SignupModel
    {
        [Required, EmailAddress]
        public string Email { get; set; } = string.Empty;

        [Required, MinLength(6)]
        public string Password { get; set; } = string.Empty;

        [Required]
        public string DisplayName { get; set; } = string.Empty;

        public string Role { get; set; } = "Viewer";
    }
}</pre>
