@@using BlazorMock.Data
@@using BlazorMock.Models
@@inject AppDbContext Db
@@inject BlazorMock.Services.AppState AppState

&lt;h3 class="text-2xl font-bold mb-4"&gt;Your Profile&lt;/h3&gt;

@@if (AppState.CurrentUser is null)
{
    &lt;p class="text-sm text-gray-600"&gt;You need to sign in before you can view your profile.&lt;/p&gt;
}
else
{
    &lt;EditForm Model="profileModel" OnValidSubmit="HandleValidSubmit"&gt;
        &lt;DataAnnotationsValidator /&gt;
        &lt;ValidationSummary /&gt;

        &lt;div class="space-y-4"&gt;
            &lt;div&gt;
                &lt;label class="block text-sm font-medium text-gray-700"&gt;Email&lt;/label&gt;
                &lt;input class="mt-1 block w-full rounded-lg border-gray-300 bg-gray-100 text-gray-600" value="@@AppState.CurrentUser.Email" disabled /&gt;
