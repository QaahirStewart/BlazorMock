                &lt;/InputSelect&gt;
            &lt;/div&gt;

            &lt;button type="submit" class="mt-2 inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-lg text-sm font-medium hover:bg-blue-700"&gt;
                Save changes
            &lt;/button&gt;
        &lt;/div&gt;
    &lt;/EditForm&gt;
}

@@code {
    private ProfileModel profileModel = new();

    protected override void OnInitialized()
    {
        if (AppState.CurrentUser is not null)
        {
            profileModel.DisplayName = AppState.CurrentUser.DisplayName;
            profileModel.Role = AppState.CurrentUser.Role;
        }
    }

    private async Task HandleValidSubmit()
    {
        if (AppState.CurrentUser is null)
        {
            return;
        }

        var user = await Db.Users.FirstOrDefaultAsync(u =&gt; u.Id == AppState.CurrentUser.Id);
        if (user is null)
        {
            return;
        }

        user.DisplayName = profileModel.DisplayName;
        user.Role = profileModel.Role;

        await Db.SaveChangesAsync();

        AppState.CurrentUser.DisplayName = profileModel.DisplayName;
        AppState.CurrentUser.Role = profileModel.Role;
    }

    public class ProfileModel
    {
        [Required]
        public string DisplayName { get; set; } = string.Empty;

        [Required]
        public string Role { get; set; } = "Viewer";
    }
}</pre>
