@page "/admin-examples/demo-dashboard-shell"
@rendermode InteractiveServer
@inherits AdminDashboardShellExampleBase

<h3 class="text-xl font-semibold mb-3">Admin Dashboard Shell</h3>

<div class="space-y-4">
    <div class="flex flex-wrap items-center justify-between gap-3">
        <div>
            <p class="text-xs text-gray-500">Project</p>
            <p class="text-sm font-semibold text-gray-900">SaaS Billing Admin</p>
        </div>
        <div class="flex items-center gap-2">
            <AdminStatusBadge Status="active" />
            <AdminStatusBadge Status="trial" />
            <AdminStatusBadge Status="overdue" />
        </div>
    </div>

    <div class="grid gap-4 sm:grid-cols-3">
        <AdminStatCard
            Title="Monthly Recurring Revenue"
            Value="$24,800"
            HelperText="+8.2% vs last month"
            Status="good" />

        <AdminStatCard
            Title="Active Subscriptions"
            Value="1,204"
            HelperText="Starter, Growth, and Scale plans"
            Status="neutral" />

        <AdminStatCard
            Title="Churn This Month"
            Value="2.1%"
            HelperText="Watching accounts at risk closely"
            Status="warning" />
    </div>

    <div class="grid gap-4 md:grid-cols-[minmax(0,2fr),minmax(0,1.4fr)]">
        <div class="bg-white rounded-xl p-4 border border-gray-200 h-40 flex items-center justify-center text-xs text-gray-500">
            Subscription panel slot (Step 8)
        </div>
        <div class="bg-white rounded-xl p-4 border border-gray-200 h-40 flex items-center justify-center text-xs text-gray-500">
            Billing summary panel slot (Step 9)
        </div>
    </div>

    <div class="bg-white rounded-xl p-4 border border-gray-200 h-40 flex items-center justify-center text-xs text-gray-500">
        Profile settings panel slot (Step 10)
    </div>
</div>
