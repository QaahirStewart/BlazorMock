@code {
    // Demo state
    private string demoView = "dashboard";
    private bool demoIsAdmin = true;

    // Step progress state
    private bool isComplete;
    private IJSObjectReference? _copyModule;

    protected override async Task OnInitializedAsync()
    {
        var step = await ProgressService.GetStepAsync("admin", 203);
        isComplete = step?.IsComplete ?? false;
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            try
            {
                _copyModule = await JS.InvokeAsync<IJSObjectReference>("import", "./js/codeblocks.js");
                await _copyModule.InvokeVoidAsync("enhancePreBlocks");
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Failed to load code block enhancer: {ex.Message}");
            }
        }
    }

    private async Task MarkComplete()
    {
        await ProgressService.MarkStepCompleteAsync("admin", 203);
        isComplete = true;
    }

    private async Task ResetStep()
    {
        await ProgressService.MarkStepIncompleteAsync("admin", 203);
        isComplete = false;
    }

    // Demo methods
    private void SetDemoView(string view)
    {
        if ((view == "settings") && !demoIsAdmin) return;
        demoView = view;
    }

    private void ToggleDemoRole()
    {
        demoIsAdmin = !demoIsAdmin;
        if (!demoIsAdmin && demoView == "settings")
        {
            demoView = "dashboard";
        }
    }

    private string GetNavClass(string view)
    {
        var baseClass = "w-full flex items-center gap-3 px-4 py-3 rounded text-left font-medium";
        var isDisabled = (view == "settings") && !demoIsAdmin;

        if (isDisabled) return baseClass + " text-purple-300 cursor-not-allowed opacity-60";
        if (demoView == view) return baseClass + " bg-purple-700 text-white";
        return baseClass + " text-purple-100 hover:bg-purple-700";
    }

    public void Dispose()
    {
        _copyModule?.DisposeAsync();
    }
}
