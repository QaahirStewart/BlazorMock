@page "/guide"
@rendermode InteractiveServer
@inherits GuideHubBase

<PageTitle>Blazor Learning Projects</PageTitle>

<div class="min-h-screen py-8">
    <div class="w-full mx-auto px-4 max-w-5xl">
        <!-- Header Section -->
        <div class="text-center mb-12">
            <h1 class="text-3xl sm:text-4xl md:text-5xl font-bold text-gray-900 mb-4 break-words">
                üìö Blazor Learning Projects
            </h1>
            <p class="text-base sm:text-lg md:text-xl text-gray-600 mb-4 leading-relaxed break-words">
                Three guided mini-projects to learn Blazor by doing: trucking app, Pok√©mon collector, and an admin SaaS
                dashboard.
            </p>
        </div>

        <!-- Projects Hub -->
        <div class="bg-gradient-to-r from-gray-100 to-blue-100 rounded-2xl p-5 mt-12">
            <h2 class="text-2xl sm:text-3xl font-bold text-gray-900 mb-2 break-words">üî∞ Choose Your Learning Project
            </h2>
            <p class="text-sm sm:text-base text-gray-700 break-words">Each mini-project focuses on a different slice of
                Blazor: CRUD + EF, APIs, or authentication.</p>
        </div>

        <div class="grid sm:grid-cols-1 md:grid-cols-3 gap-6 my-10 max-w-6xl mx-auto">
            <!-- Trucking Schedule App -->
            <a href="/trucking-guide"
                class="rounded-2xl p-0 bg-white border-2 border-gray-200 hover:shadow-lg transition-all text-left">
                <div class="p-6 flex flex-col h-full">
                    <div class="flex items-start gap-4 mb-4">
                        <div class="min-w-0 flex flex-col">
                            <div class="flex items-center gap-2 mb-2">
                                <span aria-hidden="true" class="text-3xl">üöö</span>
                                <div
                                    class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-blue-50 text-blue-700 border border-blue-200">
                                    Project 1
                                </div>
                            </div>

                            <h3 class="text-xl font-bold text-gray-900 mb-1 break-words">Trucking Schedule App</h3>
                            <p class="text-sm sm:text-base text-gray-700 leading-relaxed break-words">
                                Learn core Blazor patterns by building a CRUD app with drivers, trucks, and routes using
                                Entity Framework Core.
                            </p>
                        </div>
                    </div>
                    <div class="mt-auto text-sm text-gray-600">
                        <p class="mt-1 text-xs sm:text-sm text-gray-500">Focus: CRUD, EF Core, forms</p>
                        <div class="flex items-center justify-between">
                            <span>Progress: @completedCount/14</span>
                        </div>
                    </div>
                </div>
            </a>

            <!-- Pok√©mon Collector App -->
            <a href="/pokemon-guide"
                class="rounded-2xl p-0 bg-white border-2 border-gray-200 hover:shadow-lg transition-all text-left">
                <div class="p-6 flex flex-col h-full">
                    <div class="flex items-start gap-4 mb-4">
                        <div class="min-w-0 flex flex-col">
                            <div class="flex items-center gap-2 mb-2">
                                <img src="https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/25.png"
                                     alt="Pikachu" class="w-12 h-12 object-contain" />
                                <div
                                    class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-yellow-50 text-yellow-700 border border-yellow-200 mb-1">
                                    Project 2
                                </div>
                            </div>

                            <h3 class="text-xl font-bold text-gray-900 mb-1 break-words">Pok√©mon Collector</h3>
                            <p class="text-sm sm:text-base text-gray-700 leading-relaxed break-words">
                                Practice calling external APIs, handling loading/error states, search, filtering, and
                                basic client-side state.
                            </p>
                        </div>
                    </div>
                    <div class="mt-auto text-sm text-gray-600">
                        <p class="mt-1 text-xs sm:text-sm text-gray-500">Focus: HTTP APIs, state, UI patterns</p>
                        <div class="flex items-center justify-between">
                            <span>Progress:
                                @pokemonCompletedCount/@(pokemonTotalCount)</span>
                        </div>
                    </div>
                </div>
            </a>

            <!-- Admin Dashboard App -->
            <a href="/admin-dashboard-guide"
                class="rounded-2xl p-0 bg-white border-2 border-gray-200 hover:shadow-lg transition-all text-left">
                <div class="p-6 flex flex-col h-full">
                    <div class="flex items-start gap-4 mb-4">
                        <div class="min-w-0 flex flex-col">
                            <div class="flex items-center gap-2 mb-2">
                                <span aria-hidden="true" class="text-3xl">üõ°Ô∏è</span>
                                <div
                                    class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-emerald-50 text-emerald-700 border border-emerald-200 mb-1">
                                    Project 3
                                </div>
                            </div>

                            <h3 class="text-xl font-bold text-gray-900 mb-1 break-words">Admin Dashboard</h3>
                            <p class="text-sm sm:text-base text-gray-700 leading-relaxed break-words">
                                Build an admin dashboard focusing on sign in, profile, analytics, and a protected
                                dashboard layout.
                            </p>
                        </div>
                    </div>
                    <div class="mt-auto text-sm text-gray-600">
                        <p class="mt-1 text-xs sm:text-sm text-gray-500">Focus: auth, roles, analytics, dashboard layout
                        </p>
                        <div class="flex items-center justify-between">
                            <span>Progress:
                                @adminCompletedCount/@(adminTotalCount)</span>
                        </div>
                    </div>
                </div>
            </a>
        </div>

        <!-- Quick Links Section -->
        <div class="bg-black/3 rounded-2xl ">

            <div class="bg-black/90 rounded-2xl p-5 sm:p-6 text-white">
                <p class="text-lg sm:text-xl font-semibold mb-4 text-center break-words">üìö Learning Resources
                </p>

                <div class="grid sm:grid-cols-2 md:grid-cols-3 gap-4 mb-4">
                    <a href="/demo/trucking-schedule"
                        class="bg-white/10 hover:bg-white/20 rounded-xl p-4 transition-colors">
                        <div class="flex items-center gap-3">
                            <span class="text-2xl shrink-0">üìñ</span>
                            <div class="min-w-0">
                                <div class="text-sm sm:text-base font-semibold break-words">Trucking Schedule Demo</div>
                                <div class="text-xs sm:text-sm text-gray-300 break-words">Finished product: routes,
                                    drivers, trucks</div>
                            </div>
                        </div>
                    </a>
                    <a href="/tips" class="bg-white/10 hover:bg-white/20 rounded-xl p-4 transition-colors">
                        <div class="flex items-center gap-3">
                            <span class="text-2xl shrink-0">üí°</span>
                            <div class="min-w-0">
                                <div class="text-sm sm:text-base font-semibold break-words">Tips System</div>
                                <div class="text-xs sm:text-sm text-gray-300 break-words">Browse 20+ Blazor & C# topics
                                </div>
                            </div>
                        </div>
                    </a>
                    <a href="/progress" class="bg-white/10 hover:bg-white/20 rounded-xl p-4 transition-colors">
                        <div class="flex items-center gap-3">
                            <span class="text-2xl shrink-0">üìä</span>
                            <div class="min-w-0">
                                <div class="text-sm sm:text-base font-semibold break-words">Track Progress</div>
                                <div class="text-xs sm:text-sm text-gray-300 break-words">View all steps & completion
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="text-center text-xs sm:text-sm text-gray-300 break-words">
                    <strong>Progress:</strong> @completedCount/14 steps complete @if (completedCount >= 4)
                    {
                        <span>- Phase 1 ‚úÖ</span>
                    }
                </div>
            </div>
        </div>

    </div>
</div>