@page "/profile"
@rendermode InteractiveServer
@inherits ProfileBase

<PageTitle>My Profile</PageTitle>

@if (Auth.CurrentUser == null)
{
    Nav.NavigateTo("/signin");
}
else
{
    <div class=" py-10 px-4 bg-gray-50 rounded-3xl">
        <div class="max-w-5xl mx-auto px-4 space-y-6">
            <!-- Header -->
            <div class="text-center mb-8">
                <h1 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-2">My Profile</h1>
                <p class="text-base text-gray-600">Manage your account settings and preferences</p>
            </div>

            <!-- Profile Card -->
            <div class="bg-white rounded-2xl border-2 border-gray-200 p-6 sm:p-8">

                <div class="flex flex-col md:flex-row gap-8 items-start">
                    <!-- Left Column: Profile Picture -->
                    <div class="flex flex-col items-center gap-4 w-full md:w-auto">
                        <div class="relative">
                            @if (!string.IsNullOrEmpty(Auth.CurrentUser.ProfilePictureUrl))
                            {
                                <img src="@Auth.CurrentUser.ProfilePictureUrl" alt="Profile"
                                    class="h-32 w-32 rounded-full object-cover border-2 border-gray-200" />
                            }
                            else
                            {
                                <div
                                    class="h-32 w-32 rounded-full  flex items-center justify-center text-black text-4xl font-bold border-2 border-gray-200">
                                    @GetInitials()
                                </div>
                            }
                        </div>
                        <div class="w-full md:w-64 space-y-3">
                            <input type="text" @bind="profilePictureUrl" placeholder="Enter image URL"
                                class="w-full px-3 py-2 text-sm border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500" />
                            <button @onclick="UpdateProfilePicture"
                                class="w-full px-8 py-3 text-sm font-medium bg-blue-600 hover:bg-blue-700 text-white rounded transition-colors">
                                Update Photo
                            </button>
                        </div>
                    </div>

                    <!-- Right Column: Profile Details -->
                    <div class="flex-1 space-y-5 w-full">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">Full Name</label>
                            <input type="text" @bind="fullName"
                                class="w-full px-4 py-3 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500 text-sm" />
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">Email</label>
                            <input type="email" value="@Auth.CurrentUser.Email" disabled
                                class="w-full px-4 py-3 border border-gray-200 bg-gray-50 rounded text-sm text-gray-500" />
                        </div>
                        <div class="flex flex-col sm:flex-row sm:justify-end items-end sm:items-center gap-3  w-full">
                            <button @onclick="HandleSave"
                                class="px-8 py-3 bg-white hover:bg-green-500 items-center hover:text-white justify-center flex text-black border border-gray-300 text-sm font-medium rounded transition-colors whitespace-nowrap md:w-34 w-full">
                                Save Changes
                            </button>
                            <button @onclick="HandleSignOut"
                                class="px-6 py-3 bg-black hover:bg-gray-800 items-center justify-center flex text-white text-sm font-medium rounded transition-colors whitespace-nowrap md:w-34 w-full">
                                Sign Out
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Account Stats -->
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 max-w-5xl mx-auto">
                <div
                    class="bg-white rounded-2xl border-2 border-gray-200 p-5 text-center hover:border-blue-400 hover:shadow-lg transition-all duration-200">
                    <p class="text-xs font-medium text-gray-500 uppercase mb-2">Member Since</p>
                    <p class="text-xl font-bold text-gray-900">
                        @Auth.CurrentUser.CreatedAt.ToString("MMM dd, yyyy")
                    </p>
                </div>
                <div
                    class="bg-white rounded-2xl border-2 border-gray-200 p-5 text-center hover:border-blue-400 hover:shadow-lg transition-all duration-200">
                    <p class="text-xs font-medium text-gray-500 uppercase mb-2">Last Login</p>
                    <p class="text-xl font-bold text-gray-900">
                        @Auth.CurrentUser.LastLoginAt.ToString("MMM dd, h:mm tt")
                    </p>
                </div>
                <div
                    class="bg-white rounded-2xl border-2 border-gray-200 p-5 text-center hover:border-blue-400 hover:shadow-lg transition-all duration-200">
                    <p class="text-xs font-medium text-gray-500 uppercase mb-2">Account Status</p>
                    <p class="text-xl font-bold text-emerald-600">Active</p>
                </div>
                <div
                    class="bg-white rounded-2xl border-2 border-gray-200 p-5 text-center hover:border-blue-400 hover:shadow-lg transition-all duration-200">
                    <p class="text-xs font-medium text-gray-500 uppercase mb-2">Account Type</p>
                    <p class="text-xl font-bold @GetRoleColorClass()">
                        @Auth.CurrentUser.Role
                    </p>
                    @if (Auth.CurrentUser.Role == "Free")
                    {
                        <button @onclick="UpgradeToPaid"
                            class="mt-3 w-full px-4 py-1.5 text-sm font-medium bg-purple-600 hover:bg-purple-700 text-white rounded transition-colors">
                            Upgrade to Paid
                        </button>
                    }
                </div>
            </div>

            @if (saveMessage != null)
            {
                <div
                    class="bg-emerald-50 border border-emerald-200 rounded p-4 text-emerald-700 text-sm text-center max-w-lg mx-auto">
                    @saveMessage
                </div>
            }
        </div>
    </div>
}