@namespace BlazorMock.Components.Shared.Admin

<div class="bg-white rounded-2xl p-4 border border-gray-200 shadow-sm">
    <p class="text-xs text-gray-500 mb-1">@Title</p>
    <p class="text-2xl font-semibold text-gray-900">@Value</p>
    <p class="text-[11px] mt-1 @GetStatusTextClass()">@HelperText</p>
</div>

@code {
    [Parameter] public string Title { get; set; } = string.Empty;
    [Parameter] public string Value { get; set; } = string.Empty;
    [Parameter] public string HelperText { get; set; } = string.Empty;
    [Parameter] public string Status { get; set; } = "neutral";

    private string GetStatusTextClass() => Status switch
    {
        "good" => "text-emerald-600",
        "warning" => "text-amber-600",
        _ => "text-gray-600"
    };
}