@namespace BlazorMock.Components.Shared.Admin

<div class="bg-white rounded-xl p-6 border border-gray-200 shadow-sm">
    <h3 class="text-lg font-semibold text-gray-900 mb-4">Subscription</h3>

    <div class="space-y-4">
        <div class="flex items-start justify-between">
            <div>
                <p class="text-sm font-medium text-gray-900">Growth Plan</p>
                <p class="text-xs text-gray-500 mt-1">$99/month • Billed monthly</p>
            </div>
            <AdminStatusBadge Status="active" />
        </div>

        <div class="pt-4 border-t border-gray-200">
            <div class="grid grid-cols-2 gap-4 mb-4">
                <div>
                    <p class="text-xs text-gray-500">Seats used</p>
                    <p class="text-sm font-semibold text-gray-900">12 / 25</p>
                </div>
                <div>
                    <p class="text-xs text-gray-500">Renewal date</p>
                    <p class="text-sm font-semibold text-gray-900">Jan 15, 2026</p>
                </div>
            </div>

            <div class="flex gap-2">
                <button
                    class="flex-1 px-4 py-2 text-sm font-medium bg-blue-600 hover:bg-blue-700 text-white rounded transition-colors">
                    Upgrade Plan
                </button>
                <button
                    class="px-4 py-2 text-sm font-medium border border-gray-300 rounded hover:bg-gray-50 transition-colors">
                    Manage
                </button>
            </div>
        </div>

        <div class="pt-4 border-t border-gray-200">
            <p class="text-xs font-semibold text-gray-700 mb-2">Plan includes:</p>
            <ul class="text-xs text-gray-600 space-y-1">
                <li class="flex items-center gap-2">
                    <span class="text-emerald-500">✓</span> Up to 25 team members
                </li>
                <li class="flex items-center gap-2">
                    <span class="text-emerald-500">✓</span> Advanced analytics
                </li>
                <li class="flex items-center gap-2">
                    <span class="text-emerald-500">✓</span> Priority support
                </li>
                <li class="flex items-center gap-2">
                    <span class="text-emerald-500">✓</span> Custom integrations
                </li>
            </ul>
        </div>
    </div>
</div>